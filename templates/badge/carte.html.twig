{% extends 'base.html.twig' %}

{% block title %}Carte provisoire : {{ scout.nom }} {{ scout.prenoms }}{% endblock %}

{% block body %}
	<div class="wrapper">
		<div class="container">
			<div class="invoice" >
				<div class="carte">
					<div class="carte-header">
						<img src="{{ absolute_url(asset('assets/images/ascci.png')) }}" width="30" class="rounded-circle"
							 alt="" style="float: left">
						<H6>CARTE SCOUTE PROVISOIRE</H6>
					</div>
					<div class="carte-corps">
						<div class="information">
							<div class="identite-civile">
								<div class="text-left">Matricule: <span style="color: orangered">{{ scout.matricule}}</span></div>
								<div class="text-left">Nom: <span>{{ scout.nom|upper}}</span></div>
								<div class="text-left">Prenoms: <span>{{ scout.prenoms|upper}}</span></div>
								<div class="text-left">Né le: <span>{{ scout.dateNaissance|date('d-m-Y')}}</span></div>
								<div class="text-left">A: <span>{{ scout.lieuNaissance|upper}}</span></div>
								<div class="text-left">Sexe: <span>{{ scout.sexe}}</span></div>
							</div>
							<div class="identite-scoute">
								<div>Région: <span>{{ scout.groupe.district.region.nom}}</span></div>
								<div>District: <span>{{ scout.groupe.district.nom}}</span></div>
								<div>Groupe: <span>{{ scout.groupe.paroisse}}</span></div>
								{% if scout.branche %}
									<div>Unité: <span>{{ scout.branche}}</span></div>
								{% endif %}
								{% if scout.fonction %}
									<div>Fonction: <span >{{ scout.fonction}}</span></div>
								{% endif %}
								<div>
									En cas d'urgence: <span style="color: blue">{{ scout.contactUrgence}}</span>
									{% if scout.urgence == "AUTRE" %}
									{% else %}
										{% if scout.urgence %}
											({{ scout.urgence }})
										{% endif %}
									{% endif %}
								</div>
							</div>
						</div>
						<div class="photo">
							<div class="text-center">Carte N°: <span class="numero-carte">{{ scout.carte}}</span></div>
							<div style="border: #cccccc solid 1px; height: 27mm; background-color:rgba(204,204,204,0.3);"></div>
							<div>
								<span class="signature">Cachet et signature</span>
							</div>
							<div>
								<span class="national">Commissaire National</span>
							</div>
						</div>
					</div>
					<div class="carte-footer">
						<div>Cette carte est detenue à titre provisoire pour l'année {{ scout.cotisation }}.</div>
					</div>
				</div>
			</div>
		</div>
		<a href="#" class="sicre no-print" id="badge" onclick="print()">
			<h5 class="my-float">Imprimer le badge</h5>
		</a>
	</div>
{% endblock %}
{% block icons %}{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<style>
        .wrapper {
            font-family: "Helvetica Neue", Arial, sans-serif;
            background: #ccc;
            padding: 0;
        }

        .container {
            width: 210mm;
            height: 291mm;
            background: #fff;
        }

        .invoice {
            background: #fff;
            width: 210mm;
            height: 291mm;
            padding-top: 0;
            margin-top: 0;
        }



        .sicre {
            position: fixed;
            width: 225px;
            height: 50px;
            bottom: 115px;
            right: 60px;
            background-color: orangered;
            color: #FFF;
            text-align: center;
            box-shadow: 2px 2px 3px #999;
        }

        .sicre:hover {
            text-decoration: none;
            color: white;
        }

        .waz {
            position: fixed;
            width: 225px;
            height: 50px;
            bottom: 60px;
            right: 60px;
            background-color: orange;
            color: #FFF;
            text-align: center;
            box-shadow: 2px 2px 3px #999;
        }

        .waz:hover {
            text-decoration: none;
            color: white;
        }

        .my-float {
            margin-top: 13px;
        }

        .carte{
            border: solid 1px #ccc;
            margin-left: auto;
            margin-right: auto;
            width: 88mm;
            height: 55mm;
            /*background: linear-gradient(137deg,rgba(255,165,0,0.2), white 50%, rgba(0,128,0,0.2));*/
            background: url("{{ asset('assets/images/bg_carte.jpg') }}") no-repeat center;
            background-size: cover;
        }
        .carte-header{
            padding: 5px 10px 0;
            align-items: center;
            display: flex;
            text-align: center;
        }
        .carte-header h6{
            text-align: center;
            padding-left: 3px;
        }
        .carte-corps{
            display: grid;
            grid-template-columns: repeat(3,1fr);
            margin-top: 2px;
            padding: 5px;
        }
        .information{
            background-color: inherit;
            grid-column: 1/3;
            font-size: 0.5rem;
        }
        .information span{
            font-weight: bold;
        }
        .identite-civile{
            margin-bottom: 5px;
        }
        .photo{
            background-color: inherit;
            grid-column: 3/3;
            font-size: 0.5rem;
            text-align: center;
        }
        .photo span.numero-carte{
            font-weight: bold;
            color: darkred;
        }
        .photo span.signature{
            font-style: italic;
            font-size: 0.4rem;
        }
        .photo span.national{
            font-style: italic;
            font-size: 0.47rem;
        }

        .carte-footer{
            margin: 0;
            font-size: 0.5rem;
            font-style: italic;
            text-align: center;
            padding-bottom: 5px;
        }

        @page{
            size: A4;
            margin: 11mm 17mm 11mm 17mm;
        }
        @media screen {
            .footer{
                display: none;
            }
        }

        @media  print {
            #header{
                display: table-header-group;
            }
            #main{
                display: table-row-group;
            }
            #footer{
                display: table-footer-group;
            }
            .no-print, .no-print * {
                display: none !important;
            }
            .container {
                width: 210mm;
                height: 297mm;
                background: #fff;
            }
            .invoice{
                padding-top: 0;
                margin-top: 0;
                background: #fff;
                width: 85mm;
                height: 53mm;
            }
            .logo{
                -webkit-print-color-adjust: exact;
            }
            .entete{
                top: 0;
                margin-top: 0;
                padding-top: 0;
            }
            .entete img{
                border: 0;
            }
            .invoice .footer{
                position: fixed;
                bottom: 0;
                -webkit-mask-position: bottom;
            }
            .facture_reference, .facture_date, .objet-valeur, .totalQte{
                font-weight: bold;
                font-size: 1.1rem;
            }
            .carte{
                border: solid 1px #ccc;
                margin-left: auto;
                margin-right: auto;
                width: 88mm;
                height: 55mm;
                -webkit-print-color-adjust: exact;
                background: url("{{ asset('assets/images/bg_carte.jpg') }}") no-repeat center;
                background-size: cover;
            }

        }
	</style>
{% endblock%}
