{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>LoginCount</th>
                <td>{{ user.loginCount }}</td>
            </tr>
            <tr>
                <th>LastConnection</th>
                <td>{{ user.lastConnection ? user.lastConnection|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('sygesca_admin_user_index') }}">back to list</a>

    <a href="{{ path('sygesca_admin_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('sygesca_admin_user/_delete_form.html.twig') }}
{% endblock %}
