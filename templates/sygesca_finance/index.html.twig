{% extends 'backend_layout.html.twig' %}

{% block title %}{{ parent() }} Cotisation des membres{% endblock %}
{% block entete %}Cotisation des membres{% endblock %}
{% block body %}
	<div class="container-fluid px-4">
		<div class="row g-3 my-2 branche">
			<div class="col-md-4">
				<div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
					<div>
						<h3 class="fs-2">{{ finance.montant|number_format(0,'','.') }} FCFA</h3>
						<p class="fs-5">Total cotisation</p>
					</div>
					<i class="fas fa-money-check-alt fs-1 border rounded-full p-3"></i>
				</div>
			</div>

			<div class="col-md-4">
				<div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
					<div>
						<h3 class="fs-2">{{ finance.ristourne|number_format(0,'','.') }}</h3>
						<p class="fs-5">Ristourne</p>
					</div>
					<i class="fas fa-comments-dollar fs-1 border rounded-full p-3"></i>
				</div>
			</div>

			<div class="col-md-4">
				<div class="p-3 bg-white shadow-sm d-flex justify-content-around align-items-center rounded">
					<div>
						<h3 class="fs-2">{{ finance.frais|number_format(0,'','.') }} FCFA</h3>
						<p class="fs-5">Frais</p>
					</div>
					<i class="fas fa-pastafarianism fs-1 border rounded-full p-3"></i>
				</div>
			</div>


		</div>

		<div class="row my-5">
			<div class="card">
				<div class="card-body">
					<div class="row">
						<div class="col-md-6 offset-md-3 mb-5">
							<form action="" onchange="this.submit()" id="form_region">
								<label for="search_region">Region</label>
								<select name="region" id="search_region" class="form-control select2">
									<option value="">-- Selectionnez la r√©gion --</option>
									{% for region in regions %}
										<option value="{{ region.id }}">{{ region.nom }}</option>
									{% endfor %}
								</select>
							</form>
						</div>
					</div>
					<div class="row">
						<div class="col mt-5 tableau-liste">
							<table id="liste" class="compact display table-responsive" style="width: 100%;">
								<thead>
								<tr style="text-align:center;">
									<th>ID</th>
									<th>REGION</th>
									<th>DISTRICT</th>
									<th>GROUPE</th>
									<th>STATUT</th>
									<th>NOM & PRENOMS</th>
									<th>DATE N.</th>
									<th>SEXE</th>
									<th>FONCTION</th>
									<th>MATRICULE</th>
									<th>CARTE</th>
									<th>MONTANT</th>
									<th>RISTOURNE</th>
								</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>


	</div>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css">
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
	<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
	<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
	<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
	<script>
        $(document).ready(function() {

            $('#liste').DataTable( {
                "ajax": {
                    url: '{{ absolute_url(path("sygesca_gestion_ajax")) }}',
                    dataSrc: ''
                },
                "columns": [
                    { "data": "loop_index" },
                    { "data": "region" },
                    { "data": "district" },
                    { "data": "groupe" },
                    { "data": "statut" },
                    { "data": "identite_civile" },
                    { "data": "date_naissance" },
                    { "data": "sexe" },
                    { "data": "fonction" },
                    { "data": "matricule" },
                    { "data": "carte" },
                    { "data": "montant_sans_frais" },
                    { "data": "ristourne" },
                ],
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.3/i18n/fr_fr.json'
                },
                responsive: true
            } );
        } );
	</script>
{% endblock %}
