{% extends 'backend_layout.html.twig' %}

{% block title %}{{ parent() }} Liste des membres de la région {{ region.nom }}{% endblock %}
{% block entete %}Liste des membres de la région {{ region.nom }}{% endblock %}

{% block body %}
    <div class="container-fluid px-4">

        <div class="row my-5">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 offset-md-3 mb-5">
                            <form action="{{ path('sygesca_gestion_liste') }}" onchange="this.submit()" id="form_region">
                                <label for="search_region">District</label>
                                <select name="district" id="search_region" class="form-control select2">
                                    <option value="">-- Selectionnez le district --</option>
                                    {% for district in districts %}
                                        <option value="{{ district.id }}">{{ district.nom }}</option>
                                    {% endfor %}
                                </select>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mt-5 tableau-liste">
                            <div class="table-responsive">
                                <table id="liste" class="compact display" style="width: 100%;">
                                    <thead>
                                    <tr style="text-align:center;">
                                        <th>ID</th>
                                        <th>DISTRICT</th>
                                        <th>GROUPE</th>
                                        <th>STATUT</th>
                                        <th>NOM & PRENOMS</th>
                                        <th>SEXE</th>
                                        <th>FONCTION</th>
                                        <th>MATRICULE</th>
                                        <th>CARTE</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.print.min.js"></script>
    <script>
        $(document).ready(function() {

            $('#liste').DataTable( {
                "ajax": {
                    url: '{{ absolute_url(path("sygesca_gestion_ajax")) }}?region='+ {{ region.id }},
                    dataSrc: ''
                },
                "columns": [
                    { "data": "loop_index" },
                    { "data": "district" },
                    { "data": "groupe" },
                    { "data": "statut" },
                    { "data": "identite_civile" },
                    { "data": "sexe" },
                    { "data": "fonction" },
                    { "data": "matricule" },
                    { "data": "carte" },
                ],
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.3/i18n/fr_fr.json'
                },
                responsive: true
            } );
        } );
    </script>
{% endblock %}
